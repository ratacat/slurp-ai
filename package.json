{
  "name": "slurpai",
  "version": "1.0.0",
  "description": "A CLI tool for scraping and compiling documentation from websites and NPM packages into markdown format",
  "main": "src/slurpWorkflow.js",
  "bin": {
    "slurp": "./bin/slurp"
  },
  "files": [
    "bin/",
    "src/",
    "config.js",
    "index.js",
    "README.md"
  ],
  "scripts": {
    "test": "vitest run",
    "start": "node src/cli.js",
    "lint": "eslint .",
    "format": "prettier --write ."
