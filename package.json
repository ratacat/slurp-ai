  "keywords": [
    "documentation",
    "scraper",
    "markdown",
    "docs",
    "converter",
    "cli",
    "npm",
    "package-docs"
  ],
  "author": "Ratacat",
  "license": "ISC",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ratacat/slurpai.git"
  },
  "bugs": {
    "url": "https://github.com/ratacat/slurpai/issues"
  },
  "homepage": "https://github.com/ratacat/slurpai#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@extractus/article-extractor": "^8.0.17",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "axios": "^1.8.4",
    "chalk": "^4.1.0",
    "cheerio": "^1.0.0",
    "fs-extra": "^11.3.0",
    "js-yaml": "^4.1.0",
    "p-queue": "^8.1.0",
